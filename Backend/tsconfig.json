{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "src/**/*.ts",
    "features/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}